# API Configuration
API_BASE_URL=http://localhost:3001
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001

# For production, use your deployed API URL:
# NEXT_PUBLIC_API_BASE_URL=https://api.yourdomain.com

# Cal.com Integration
NEXT_PUBLIC_CAL_COM_NAMESPACE=your-cal-namespace
# Get this from your Cal.com account settings

# Persona KYC Integration
NEXT_PUBLIC_PERSONA_TEMPLATE_ID=tmpl_sandbox_template_id
NEXT_PUBLIC_PERSONA_ENVIRONMENT=sandbox
# For production, use 'production' and get real template ID

# Feature Flags
NEXT_PUBLIC_ENABLE_CHAT=false
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Development Settings
NEXT_PUBLIC_APP_ENV=development

# Analytics (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=""
NEXT_PUBLIC_MIXPANEL_TOKEN=""

# Error Tracking (Optional)
NEXT_PUBLIC_SENTRY_DSN=""

# Social Login (Optional)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=""
NEXT_PUBLIC_LINKEDIN_CLIENT_ID=""